<StackLayout class="graybackground" xmlns="http://schemas.nativescript.org/tns.xsd" xmlns:Card="nativescript-cardview" xmlns:nativescript-fresco="nativescript-fresco" loaded="speakersLoaded" unloaded="speakersUnLoaded">
  <ListView id="speaker_id" items="{{ speaker_items }}" itemTap="speaker_item_tap" separatorColor="#00FFFFFF" >
    <ListView.itemTemplate>
      <Card:CardView class="" margin="10" elevation="40" radius="5">
        <GridLayout rows="10,100,auto,auto" columns="*,100,*">
          <nativescript-fresco:FrescoDrawee row="1" col="1" width="100" height="100" progressiveRenderingEnabled="true" roundAsCircle="true" class="border5 positioncenter" actualImageScaleType="fitCenter" placeholderImageUri="~/images/profile-placeholder.png" failureImageUri="~/images/errorplaceholder.png" imageUri="{{ speaker_item_image }}"/>
          <Label row="2" col="0" colspan="3" textWrap="true" class="font24 blacktext textcenter marginleft10 marginright10 font-helvetica" text="{{ speaker_item_name }}" />
          <Label row="3" col="0" colspan="3" textWrap="true" class="font18 blacktext textcenter marginbottom10 marginleft10 marginright10 font-helvetica" text="{{ speaker_item_talk }}" />
        </GridLayout>
      </Card:CardView>
    </ListView.itemTemplate>
  </ListView>
</StackLayout>
