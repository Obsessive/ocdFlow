<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="loginLoaded" unloaded="loginUnLoaded">
  <ActionBar title="INK Connect">

  </ActionBar>
  <GridLayout rows="auto,20,*" columns="*">
    <Image row="0" col="0" src="~/images/inktalks.png" stretch ="aspectFit" class="positioncenter margin10"/>
    <GridLayout row="2" col="0" rows="auto,auto,auto,auto,*,auto,10" columns="*">
      <TextField row="0" col="0" hint="Email" id="email_id" class="font22 margintop10 marginleft10 marginright10 blacktext" keyboardType="email"/>
      <TextField row="1" col="0" hint="Password" id="password_id" secure="true" class="font22 margintop10 marginleft10 marginright10 blacktext"/>
      <Button row="2" col="0" tap="{{ login_action }}" text="LOGIN" class="margin10 border5 font22 whitetext themebackground"/>
      <Label row="3" col="0" id="terms_of_use_id" text="Terms Of Use" class="margin10 positioncenter textcenter font18 blacktext"/>
      <!-- <Label row="5" col="0" id="trouble_logging_id" text="Having Trouble Logging in?" class="margin10 positioncenter textcenter font20 blacktext"/> -->
      <Label row="5" col="0" id="not_a_member_id" tap="{{ register_action }}" text="Not a member?" class="margin10 positioncenter textcenter font20 blacktext"/>
    </GridLayout>
  </GridLayout>
</Page>
